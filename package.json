    "@storybook/react": "^6.2.2",
    "@types/faker": "^5.5.0",
    "babel-loader": "8.1.0",
    "chromatic": "^5.6.2",
    "faker": "^5.5.2",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1"
  },
  "prettier": {
    "tabWidth": 4
  },
  "engines": {
    "node": "14.x"
  }
